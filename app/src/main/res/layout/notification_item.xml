<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="0dp"
    android:background="@color/bottom_sheet_color"
    android:backgroundTint="@color/bottom_sheet_color"
    android:layout_height="wrap_content">


       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:backgroundTint="@color/bottom_sheet_color"
           android:layout_marginVertical="@dimen/_15sdp"
           android:orientation="horizontal">

           <ImageView
               android:layout_gravity="center"
               android:layout_width="@dimen/_30sdp"
               android:layout_height="@dimen/_30sdp"
               android:layout_margin="@dimen/_10sdp"
               android:src="@drawable/location_placeholder"/>

           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_marginStart="@dimen/_5sdp"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:orientation="vertical">

               <TextView
                   android:id="@+id/main_message"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="main message"
                   android:textSize="@dimen/_15ssp"
                   android:fontFamily="@font/radio_canada"
                   android:textColor="@color/white"/>
               <TextView
                   android:id="@+id/to_location"
                   android:layout_marginTop="@dimen/_1sdp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   style="@style/TextAppearance.Material3.BodyLarge"
                   android:text="to where"
                   android:textColor="@color/black"
                   android:textSize="@dimen/_11ssp"
                   android:fontFamily= "@font/public_sans"/>


           </LinearLayout>

       </LinearLayout>



</androidx.cardview.widget.CardView>