<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".maps.MapCostumerActivity">


    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/map_costumer_Fragment"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <!--    <ImageView-->
    <!--        android:layout_width="@dimen/_20sdp"-->
    <!--        android:layout_marginTop="@dimen/_15sdp"-->
    <!--        android:layout_marginStart="@dimen/_10sdp"-->
    <!--        android:layout_height="@dimen/_20sdp"-->
    <!--        android:src="@drawable/left_arrow"/>-->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_marginTop="@dimen/_15sdp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Order "
            android:textSize="@dimen/_15ssp"
            android:fontFamily="@font/poppins_semibold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#2224"
            android:textSize="@dimen/_15ssp"
            android:fontFamily="@font/poppins_semibold"/>

    </LinearLayout>




    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_240sdp"
        android:layout_gravity="bottom"
        android:backgroundTint="@color/cardview_tracking"
        android:background="@drawable/rounded_corner_cardview" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/_190sdp"
        android:layout_marginHorizontal="@dimen/_40sdp"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            app:civ_border_color="@color/streetox_primary_color"
            app:civ_border_width="@dimen/_2sdp"
            android:src="@drawable/man"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="name"
                android:textSize="@dimen/_15ssp"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_semibold" />

            <LinearLayout
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_12sdp">
                <RatingBar
                    android:id="@+id/ratingBar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:numStars="5"
                    android:rating="0"
                    android:stepSize="1" />
            </LinearLayout>
        </LinearLayout>


        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"/>


        <ImageView
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:src="@drawable/chat"
            android:layout_gravity="center|end"/>




    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_180sdp"
        android:layout_gravity="bottom"
        android:background="@drawable/rounded_corner_cardview" />



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/_60sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:orientation="vertical">


        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/clock_tracking"/>

        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_gravity="center"
            android:src="@drawable/dotted_barline"/>
        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_2sdp"
            android:src="@drawable/dotted_barline"/>

        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_2sdp"
            android:src="@drawable/dotted_barline"/>

        <ImageView
            android:layout_width="@dimen/_10sdp"
            android:layout_height="@dimen/_10sdp"
            android:src="@drawable/triangle"
            android:layout_gravity="center"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginStart="@dimen/_70sdp"
        android:layout_marginBottom="@dimen/_55sdp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estimated Delivery Time"
            android:textColor="@color/cardview_tracking"
            android:textSize="@dimen/_13ssp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10 minutes"
            android:layout_marginTop="@dimen/_12sdp"
            android:textColor="@color/cardview_tracking"
            android:textSize="@dimen/_13ssp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="From"
            android:layout_marginTop="@dimen/_12sdp"
            android:textColor="@color/text_tracking"
            android:textSize="@dimen/_13ssp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To"
            android:layout_marginTop="@dimen/_12sdp"
            android:textColor="@color/text_tracking"
            android:textSize="@dimen/_13ssp"/>

    </LinearLayout>

    <View
        android:layout_width="@dimen/_280sdp"
        android:layout_height="@dimen/_1sdp"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="@dimen/_40sdp"
        android:background="@color/background_color"
        app:layout_constraintHorizontal_weight="3" />




</FrameLayout>

